{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": ["es6", "es2015", "es2016", "es2017", "dom", "dom.iterable", "scripthost"],
    "jsx": "preserve",
    "importHelpers": true,
    "strict": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "outDir": "build/esm",
    "declaration": true
  },
  "exclude": ["node_modules", "build", "test", "demo"]
}
